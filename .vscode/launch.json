{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug App",
            "program": "${workspaceFolder}/index.js",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "--nolazy",
                "--inspect"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "sourceMaps": true,
            "autoAttachChildProcesses": true,
            "restart": true,
            "console": "integratedTerminal"
        }
    ]
}
